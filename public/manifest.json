{
  "manifest_version": 3,
  "name": "X Enhancer",
  "version": "1.0",
  "description": "Hide specific buttons from Twitter sidebars",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://x.com/*",
    "*://*.twitter.com/*",
    "*://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Twitter Button Hider"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://x.com/*",
        "*://*.twitter.com/*",
        "*://twitter.com/*"
      ],
      "js": ["content.js"],
      "type": "module"
    }
  ]
}
